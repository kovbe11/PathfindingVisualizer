<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/grid_settings_title">

        <SeekBarPreference
            android:max="70"
            app:defaultValue="55"
            app:key="grid_size"
            app:min="40"
            app:seekBarIncrement="1"
            app:title="@string/grid_size_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Dijkstra"
            app:entries="@array/algorithm_entries"
            app:entryValues="@array/algorithm_values"
            app:key="algorithm"
            app:title="@string/algo_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>