<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <hu.bme.aut.android.pathfindingvisualizer.view.GridView
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/backgroundColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/toolbarColor">

            <Button
                android:id="@+id/settings_button"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:onClick="onSettingsClicked"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_play_button"
                />

            <ToggleButton
                android:id="@+id/wall_button"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_wall"
                android:onClick="onCursorTypeClicked"
                android:textOff=""
                android:textOn=""
                android:textSize="0sp" />

            <ToggleButton
                android:id="@+id/weight_button"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_weight"
                android:onClick="onCursorTypeClicked"
                android:textOff=""
                android:textOn=""
                android:textSize="0sp" />

            <ToggleButton
                android:id="@+id/start_node_button"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_start_node"
                android:onClick="onCursorTypeClicked"
                android:checked="true"
                android:textOff=""
                android:textOn=""
                android:textSize="0sp" />

            <ToggleButton
                android:id="@+id/end_node_button"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_end_node"
                android:onClick="onCursorTypeClicked"
                android:textOff=""
                android:textOn=""
                android:textSize="0sp" />

            <ToggleButton
                android:id="@+id/clear_type_button"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_delete"
                android:onClick="onCursorTypeClicked"
                android:textOff=""
                android:textOn=""
                android:textSize="0sp" />

        </LinearLayout>

</LinearLayout>
